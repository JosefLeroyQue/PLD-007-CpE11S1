#include <iostream>

using namespace std;

int main() {
    int total = 0;       // Initialize total to zero
    int grade;          // Variable to hold the grade
    int gradeCounter = 1; // Initialize grade counter to one
    const int numStudents = 10; // Total number of students

    // While grade counter is less than or equal to ten
    while (gradeCounter <= numStudents) {
        // Input the next grade
        cout << "Enter grade for student " << gradeCounter << " (0-100): ";
        cin >> grade;

        // Validate grade input
        while (grade < 0 || grade > 100) {
            cout << "Invalid grade. Please enter a grade between 0 and 100: ";
            cin >> grade;
        }

        // Add the grade into the total
        total += grade;
        // Add one to the grade counter
        gradeCounter++;
    }

    // Set the class average to the total divided by the number of students
    float classAverage = static_cast<float>(total) / numStudents;

    // Print the class average
    cout << "Class average is: " << classAverage << endl;

    return 0; // Program ends
}
