#include <stdio.h>

int main() {
    int counter = 0; // Initialize counter to zero
    int grade; // Variable to hold the grade
    int total = 0; // Initialize total to zero
    float average; // Variable to hold the average

    // Input the first grade
    printf("Enter a grade (-1 to end): ");
    scanf("%d", &grade);

    // While the user has not entered the sentinel
    while (grade != -1) {
        // Add this grade into the running total
        total += grade;
        // Add one to the grade counter
        counter++;

        // Input the next grade (possibly the sentinel)
        printf("Enter a grade (-1 to end): ");
        scanf("%d", &grade);
    }

    // If the counter is not equal to zero
    if (counter != 0) {
        // Set the average to the total divided by the counter
        average = (float)total / counter;
        // Print the average
        printf("Average grade is: %.2f\n", average);
    } else {
        // Print “No grades were entered”
        printf("No grades were entered.\n");
    }

    return 0; // Program ends
}
